{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "MyCalcCore": "Debug",
                "MyCalcCli": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ]
    },
    "CryptoApi": {
        "CoinGeckoBaseUrl": "https://api.coingecko.com/api/v3/simple/price",
        "RequestTimeoutSeconds": 25
    },
    "Financial": {
        "DefaultVatPercentage": 25.0,
        "DefaultCurrency": "USD"
    }
}